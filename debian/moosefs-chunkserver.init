#!/bin/sh

### BEGIN INIT INFO
# Provides:		moosefs-chunkserver
# Required-Start:	$network $remote_fs
# Required-Stop:	$remote_fs
# Default-Start:	2 3 4 5
# Default-Stop:		0 1 6
# Short-Description:	Start moosefs-chunkserver at boot time
# Description:		moosefs-chunkservers provide storage space for MooseFS.
### END INIT INFO

PATH=/usr/local/sbin:/usr/local/bin:/sbin:/bin:/usr/sbin:/usr/bin
DAEMON=/usr/sbin/mfschunkserver
NAME=moosefs-chunkserver
DEFAULT_USER=mfs
DEFAULT_GROUP=mfs
DEFAULT_DATADIR=/var/lib/mfs
DEFAULT_CFG=/etc/mfs/mfschunkserver.cfg
COMPAT_CFG=/etc/mfschunkserver.cfg

test -e $DAEMON || exit 0

# Include moosefs-chunkserver defaults if available
. /lib/lsb/init-functions
MFSCHUNKSERVER_ENABLE=false
MFSCHUNKSERVER_DEFAULTS_FILE=/etc/default/moosefs-chunkserver
MFSCHUNKSERVER_CONFIG_FILE=
if [ -s "$MFSCHUNKSERVER_DEFAULTS_FILE" ]; then
	. "$MFSCHUNKSERVER_DEFAULTS_FILE"
	case "x$MFSCHUNKSERVER_ENABLE" in
		xtrue) ;;
		xfalse)
			log_warning_msg "$NAME not enabled in \"$MFSCHUNKSERVER_DEFAULTS_FILE\", exiting..."
			exit 0
			;;
		*)
			log_failure_msg "value of MFSCHUNKSERVER_ENABLE must be either 'true' or 'false';"
			log_failure_msg "not starting ${NAME}."
			exit 1
			;;
	esac
fi

set -e

if [ -n "$MFSCHUNKSERVER_CONFIG_FILE" ]; then
	CFGFILE="$MFSCHUNKSERVER_CONFIG_FILE"
elif [ -f "$DEFAULT_CFG" -o ! -f "$COMPAT_CFG" ]; then
	CFGFILE="$DEFAULT_CFG"
else
	CFGFILE="$COMPAT_CFG"
fi
if [ -s "$CFGFILE" ]; then
	DATADIR=$(sed -e 's/[ 	]#.*$//' -n -e 's/^DATA_PATH[ 	]*=[ 	]*\([^ 	]*\)[ 	]*$/\1/p' "$CFGFILE")
	MFSUSER=$(sed -e 's/[ 	]#.*$//' -n -e 's/^WORKING_USER[ 	]*=[ 	]*\([^ 	]*\)[ 	]*$/\1/p' "$CFGFILE")
	MFSGROUP=$(sed -e 's/[ 	]#.*$//' -n -e 's/^WORKING_GROUP[ 	]*=[ 	]*\([^ 	]*\)[ 	]*$/\1/p' "$CFGFILE")
else
	DATADIR=
	MFSUSER=
	MFSGROUP=
fi
: ${DATADIR:=$DEFAULT_DATADIR}
: ${MFSUSER:=$DEFAULT_USER}
: ${MFSGROUP:=$DEFAULT_GROUP}

case "$1" in
	start)
		echo "Starting ${NAME}:"
		$DAEMON ${MFSCHUNKSERVER_CONFIG_FILE:+-c $MFSCHUNKSERVER_CONFIG_FILE} start
		;;

	stop)
		echo "Stopping ${NAME}:"
		$DAEMON ${MFSCHUNKSERVER_CONFIG_FILE:+-c $MFSCHUNKSERVER_CONFIG_FILE} stop
		;;

	reload|force-reload)
		echo "Reloading ${NAME}:"
		$DAEMON ${MFSCHUNKSERVER_CONFIG_FILE:+-c $MFSCHUNKSERVER_CONFIG_FILE} reload
		;;

	restart)
		echo "Restarting ${NAME}:"
		$DAEMON ${MFSCHUNKSERVER_CONFIG_FILE:+-c $MFSCHUNKSERVER_CONFIG_FILE} restart
		;;
	
	status)
		$DAEMON ${MFSCHUNKSERVER_CONFIG_FILE:+-c $MFSCHUNKSERVER_CONFIG_FILE} test 2> /dev/null
		;;

	*)
		N=/etc/init.d/$NAME
		echo "Usage: $N {start|stop|restart|reload|force-reload|status}" >&2
		exit 1
		;;
esac

exit 0
